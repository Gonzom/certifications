        <section id="syllabus">
            <div class="row">
                <h2> #סילבוס_הקורס</h2>
                <div id="weeks">
                    {% for week in syllabus %}
                    <div class="week">
                        <div class="week-title flex-row">
                            <ion-icon name="caret-back-outline"></ion-icon>
                            <p><b>שבוע {{ loop.index }}</b></p>
                            <div>
                                {%- for icon in week.icons[::-1] -%}
                                    <ion-icon name="{{ icon }}"></ion-icon>
                                {% endfor -%}
                            </div>
                        </div>
                        <div class="week-info sub-cat-closed">
                            <p class="para-m">
                            {{ week.description }}
                            </p>
                            <ul class="sub-cat">
                                {%- for subject in week.topics -%}
                                    <li>{{ subject }}</li>
                                {%- endfor %}
                            </ul>
                        </div>
                    </div>
                    {% endfor %}
                </div>
            </div>
        </section>
